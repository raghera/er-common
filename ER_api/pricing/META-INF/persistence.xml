<?xml version="1.0" encoding="UTF-8"?>


<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!--xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" -->

	<persistence-unit name="pricing3" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>com.vizzavi.ecommerce.business.catalog.PricePoint</class>
		<class>com.vizzavi.ecommerce.business.catalog.CatalogPackage</class>
		<class>com.vizzavi.ecommerce.business.catalog.CatalogService</class>
		<class>com.vizzavi.ecommerce.business.catalog.internal.BalanceImpact</class>
		<class>com.vizzavi.ecommerce.business.catalog.Tax</class>
		<class>com.vizzavi.ecommerce.business.catalog.TaxRate</class>
		<class>com.vizzavi.ecommerce.business.catalog.Partner</class>
		<class>com.vizzavi.ecommerce.business.catalog.PaymentContent</class>
		<class>com.vizzavi.ecommerce.business.catalog.Priceplan</class>
		
		
		<properties>
			<property name="hibernate.connection.url" value="jdbc:oracle:thin:@dbhost:1521:db" />
			<property name="hibernate.connection.username" value="pricing3" />
			<property name="hibernate.connection.password" value="pricing3" />
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.current_session_context_class"	value="thread" />

			<property name="hibernate.show_sql" value="true" />
			
			
			
			
			
			
		</properties>
	</persistence-unit>
</persistence>



